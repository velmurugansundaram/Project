ipipeline {
    agent any 

    environment {
        DOCKER_CREDENTIALS_ID = 'dockerhub'           // Docker Hub credentials
        DB_CREDENTIALS_ID = 'mysql-credentials'       // MySQL credentials
        GITHUB_CREDENTIALS_ID = 'github-credentials'  // GitHub SSH credentials
        SSH_PASSPHRASE_CREDENTIALS_ID = 'ssh-passphrase'  // Passphrase for SSH key
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    withCredentials([sshUserPrivateKey(credentialsId: GITHUB_CREDENTIALS_ID, keyFileVariable: 'GIT_SSH_KEY'),
                                     string(credentialsId: SSH_PASSPHRASE_CREDENTIALS_ID, variable: 'SSH_PASSPHRASE')]) {
                        sh '''
                        eval `ssh-agent -s`
                        echo $SSH_PASSPHRASE | ssh-add $GIT_SSH_KEY
                        git clone git@github.com:velmurugansundaram/Project.git
                        '''
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS_ID, passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    }
                }
                sh 'docker build -t velmurugansundaram/project-image .'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    withCredentials([string(credentialsId: DB_CREDENTIALS_ID, variable: 'MYSQL_ROOT_PASSWORD')]) {
                        sh '''
                        echo "Deploying with MySQL Root Password: $MYSQL_ROOT_PASSWORD"
                        '''
                    }
                }
                echo 'Deploying application...'
            }
        }
    }
}
